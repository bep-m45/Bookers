<!DOCTYPE html>
  <header>
    <h1>Books</h1>
  </header>
  <body>
    <main>
      <div class="list">
        <table width="100%" cellpadding="10">
          <tr>
          <th width="20%" >Title</th>
          <th width="50%"> Body</th>
          <th width="40%"></th>
          </tr>
           <% @books.each do |book| %>
        <tr>
          <td ><%= book.title %></td>
          <td ><%= book.body %></td>
          <td align="center">
             <div class="list-item"><%= link_to 'Show', book_path(book.id) %></div>
             <div class="list-item"><%= link_to'Edit', edit_book_path(book.id) %></div>
             <div class="list-item"><%= link_to 'Destrot', book_path(book.id), method: :delete %></div>
          </td>
            <% end %>
        </tr>
        </table>
      </div>
      <div class="post">
        <h2>New book</h2>
        <!-- form_with 挿入-->
        <%= form_with model:@book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Body</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </main>
    </body>
    </html>